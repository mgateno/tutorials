<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name" string="Name" />
                <field name="postcode" string="Postcode" />
                <field name="bedrooms" string="Bedrooms" />
                <field name="living_area" string="Living Area" />
                <field name="expected_price" string="Expected Price" />
                <field name="selling_price" string="Selling Price" />
                <field name="date_availability" string="Date Availability" />
                <field name="property_type_id" string="Property Type" />
                <separator />
                <filter string="Available" name="available"
                    domain="[('active', '=', True)]" />
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="group_by_postcode"
                        context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_sold" type="object" class="oe_highlight" string="SOLD" />
                    <button name="action_cancel" type="object" class="oe_highlight" string="CANCEL" />
                </header>
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <field name="property_tag_ids" widget="many2many_tags" />
                    <group>
                        <group>
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook string="Description">
                        <page string="Description">
                            <group>
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                                <field name="property_type_id" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page string="Offers">
                            <tree string="Offers">
                                <field name="offer_ids" />
                            </tree>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="seller_id" />
                                <field name="buyer_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
                <field name="property_type_id" />
                <field name="property_tag_ids" />
            </tree>
        </field>
    </record>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>